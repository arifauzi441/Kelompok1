    h2.title COMMENT
    .comment
      .comment-sidebar
        i(class="fa-brands fa-" + icon1)
        i(class="fa-brands fa-" + icon2)
        i(class="fa-brands fa-" + icon3)
        i(class="fa-brands fa-" + icon4)
      each _ in ['Alonso', 'Andrew', 'Mari']
